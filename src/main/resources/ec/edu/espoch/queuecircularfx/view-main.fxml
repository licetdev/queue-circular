<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espoch.queuecircularfx.controller.QueuecController">

    <top>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #F5F7FA;" BorderPane.alignment="CENTER">

            <!-- TÃTULO -->
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Circular Queue Visualizer" />

            <!-- CONTROLES -->
            <HBox alignment="CENTER" spacing="10">

                <TextField fx:id="txtValue" prefWidth="140" promptText="Ingrese valor" />

                <Button fx:id="btmEnqueue" onAction="#enqueue" style="-fx-background-color: #2D64E0; -fx-text-fill: white;" text="ENQUEUE" />

                <Button fx:id="btmDequeue" onAction="#dequeue" style="-fx-background-color: #D9534F; -fx-text-fill: white;" text="DEQUEUE" />

                         <Button fx:id="peek" onAction="#peek" text="PEEK" />

                <Button fx:id="btmEmpty" onAction="#isEmpty" text="IS EMPTY" />

                <Button fx:id="btmFull" onAction="#isFull" text="IS FULL" />

                <Label style="-fx-font-weight: bold;" text="Estado:" />

                <Label fx:id="lblEstado" text="---" />
            </HBox>

            <!-- CANVAS -->
            <ScrollPane prefHeight="200.0" prefWidth="580.0">
                <content>
                    <StackPane fx:id="canvasHolder" prefHeight="150.0" prefWidth="560.0" style="-fx-background-color: white;                                       -fx-border-color: #D0D0D0;                                       -fx-border-radius: 6;" />
                </content>
            </ScrollPane>

        </VBox>
    </top>
</BorderPane>
